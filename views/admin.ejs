<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Orders</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
      <h2>Order History</h2>
<form action="/admin/orderHistory" method="GET">
    <div class="mb-3">
        <label for="startDate" class="form-label">Start Date</label>
        <input type="date" class="form-control" id="startDate" name="startDate" required>
    </div>
    <div class="mb-3">
        <label for="endDate" class="form-label">End Date</label>
        <input type="date" class="form-control" id="endDate" name="endDate" required>
    </div>
    <button type="submit" class="btn btn-primary">Get Order History</button>
</form>
        <h1>Admin Orders</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>User</th>
                    <th>Items</th>
                    <th>Total Amount</th>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order._id %></td>
                            <td>
                                <%= order.user ? `${order.user.username} (${order.user.email})` : 'Unknown User' %>
                            </td>
                            <td>
                                <ul>
                                    <% order.items.forEach(item => { %>
                                        <li>
                                            <strong>Name:</strong> <%= item.item ? item.item.ItemName : 'Item Deleted' %> <br>
                                            <strong>Price:</strong> ₹<%= item.item ? item.item.Price : 'N/A' %> <br>
                                            <strong>Quantity:</strong> <%= item.quantity %>
                                        </li>
                                    <% }); %>
                                </ul>
                            </td>
                            <td>₹<%= order.totalAmount %></td>
                            <td><%= order.status %></td>
                            <td>
                                <% if (order.status === 'Pending') { %>
                                    <form action="/orders/<%= order._id %>/receive" method="POST">
                                        <button class="btn btn-sm btn-success">Order Received</button>
                                    </form>
                                <% } else if (order.status === 'Received') { %>
                                    <form action="/orders/<%= order._id %>/complete" method="POST">
                                        <button class="btn btn-sm btn-warning">Order Completed</button>
                                    </form>
                                <% } else if (order.status === 'Completed') { %>
                                    <form action="/orders/<%= order._id %>/deliver" method="POST">
                                        <button class="btn btn-sm btn-info">Order Delivered</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">No orders found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>