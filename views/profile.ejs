    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <div class="container mt-5">
        <div class="card">
          <div class="card-header">
            <h2>Profile Page</h2>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <img src="https://static.vecteezy.com/system/resources/thumbnails/019/879/198/small_2x/user-icon-on-transparent-background-free-png.png" class="img-fluid rounded-circle" alt="Profile Picture">
              </div>
              <div class="col-md-8">
                <div style="float: right; border: 2px solid blueviolet; border-radius: 7px; padding: 4px; text-align: center;">
                    <img src="https://png.pngtree.com/png-clipart/20220213/original/pngtree-coins-stack-icon-vector-png-image_7267762.png" class="img-fluid rounded-circle" alt="Stack of Coins" style="width: 7vh; height: 7vh;">
                    <h1>100</h1></div>
                <h3><%= user.username %></h3>
                <p><strong>Email: </strong><%= user.email %></p>
              </div>
              <button class="edit-profile btn btn-success" style="float: right; width: 30%; margin: 2%;">Edit Profile</button>
            </div>
          </div>
        </div>
      </div>

      <% for (let i = previousOrders.length-1; i >= 0 ; i--) { %>
        <div class="container mt-4">
          <div class="card">
            <div class="card-header text-white" style="background-color: #800080;">
              <%= new Date(previousOrders[i].createdAt).toLocaleString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: '2-digit', 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit', 
                hour12: false 
            }).replace(/,/, '') %>

            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <div><strong>Total Amount:</strong> <%= previousOrders[i].totalAmount*15 %></div>
                </div>
                <% for (let j = 0; j < previousOrders[i].items.length; j++) { %>
                  <div class="col-md-6 mt-3">
                    <div class="card border-secondary">
                      <div class="card-body">
                        <div><strong>Item Name:</strong> <%= previousOrders[i].items[j].item.ItemName %></div>
                        <div><strong>Quantity:</strong> <%= previousOrders[i].items[j].quantity %></div>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
      
      

      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
