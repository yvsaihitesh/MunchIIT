<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="icon" type="image/x-icon" href="https://i.pinimg.com/564x/57/00/c0/5700c04197ee9a4372a35ef16eb78f4e.jpg">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"/>
    <link href="./bootstrap.css" rel="stylesheet">
    <link rel="stylesheet" href="./home.css">
    <link rel="stylesheet" href="./profile.css">
</head>
<body>
    <%- include('partials/navbar')%>

    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column;">
    <div class="container mt-5">
        <div class="card">
          <div class="card-header">
            <h2>Profile Page</h2>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <img src="https://static.vecteezy.com/system/resources/thumbnails/019/879/198/small_2x/user-icon-on-transparent-background-free-png.png" class="img-fluid rounded-circle" alt="Profile Picture">
              </div>
              <div class="col-md-8">
                <div style="float: right; border: 2px solid blueviolet; border-radius: 7px; padding: 4px; text-align: center;">
                    <img src="https://png.pngtree.com/png-clipart/20220213/original/pngtree-coins-stack-icon-vector-png-image_7267762.png" class="img-fluid rounded-circle" alt="Stack of Coins" style="width: 7vh; height: 7vh;">
                    <h1>100</h1></div>
                <h3><%= user.username %></h3>
                <p><strong>Email: </strong><%= user.email %></p>
              </div>
              <button class="edit-profile btn btn-success" style="float: right; width: 30%; margin: 2%;">Edit Profile</button>
            </div>
          </div>
        </div>
      </div>

      <% for (let i = previousOrders.length-1; i >= 0 ; i--) { %>
        <div class="container mt-4">
          <div class="card">
            <div class="card-header text-white" style="background-color: #800080;">
              <%= new Date(previousOrders[i].createdAt).toLocaleString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: '2-digit', 
                hour: '2-digit', 
                minute: '2-digit', 
                second: '2-digit', 
                hour12: false 
            }).replace(/,/, '') %>

            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <div><strong>Total Amount:</strong> <%= previousOrders[i].totalAmount*15 %></div>
                </div>
                <% for (let j = 0; j < previousOrders[i].items.length; j++) { %>
                  <li>
                      <% if (previousOrders[i].items[j].item) { %>
                          <h6><%= previousOrders[i].items[j].item.ItemName %> (x <%= previousOrders[i].items[j].quantity %>)</h6>
                      <% } else { %>
                          <h6>Item not found (x <%= previousOrders[i].items[j].quantity %>)</h6>
                      <% } %>
                  </li>
              <% } %>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
      
      

      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./home.js"></script>
</body>
</html>
